<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    @Styles.Render("~/Content/logincss")
</head>
<body class="bg-gray-500 ">
    <div class="container">
        <div class="my-xl-5"></div>
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-8 col-md-9">
                <div class="card text-white bg-info o-hidden border-white shadow my-2">
                    <div class="card-body">
                        <div class="text-center">
                            <h3>國際後勤倉儲管理系統</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-8 col-md-9">
                <div class="card o-hidden border-info shadow-lg">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/loginjs")
    @RenderSection("Scripts", required: false)
</body>
</html>
